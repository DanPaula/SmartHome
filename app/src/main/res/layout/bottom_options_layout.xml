<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/idBottomSheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="4dp">

    <TextView
        android:id="@+id/idSensorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:padding="4dp"
        android:text="Sensor Name"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/idSensorType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idSensorName"
        android:layout_margin="3dp"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="3dp"
        android:padding="4dp"
        android:text="Sensor Type"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/idSensorIdEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idSensorType"
        android:layout_margin="3dp"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="3dp"
        android:padding="4dp"
        android:text="Sensor ID"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/idSensorImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/idSensorIdEdit"
        android:layout_centerVertical="true"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:src="@drawable/ic_launcher_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idSensorImage"
        android:orientation="horizontal"
        android:weightSum="2">

        <!--button for editing sensor-->
        <Button
            android:id="@+id/idBtnEditSensor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:text="Edit Sensor"
            android:textAllCaps="false" />

        <!--button for viewing values of sensor-->
        <Button
            android:id="@+id/idBtnViewValuesSensor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:text="View Sensor"
            android:textAllCaps="false" />

    </LinearLayout>
</RelativeLayout>